@startuml conception


class MonteCarlo {
    + option : Option *
    + model : BlackScholesModel*
    + fixingDatesNumber : int N
    + sampleNumber : int M
    + fdStep : double h 
    + hedging_dates_number : int H 

    + price(double t, double &price, double &price_std, const PnlMat *Past)
    + delta(PnlMat *past, PnlVect *deltas_vect, PnlVect *stddev_deltas_vect, double t)
    + calculPAndL(PnlMat *market_data, double &p_and_l)
    
}


abstract class Option {
    + Maturity : Date 
    + strike : double 
    + type :  OptionType
    + optionSize : double
    + payoffCoeffcients : PnlVect*   
    + abstract payOff(PnlMat* matrix) 
}

Enum OptionType {
    + Basket : 0 
    + Asian : 1 
    + Performance : 2
}

class OptionBasket {
    + override payOff(PnlMat* matrix)
}

class OptionAsian {
    + override payOff(PnlMat* matrix)
}

class OptionPerformance {
    + override payOff(PnlMat* matrix)
}

Option <|-- OptionBasket 
Option <|-- OptionAsian 
Option <|-- OptionPerformance 



class BlackScholesModel {
    + interesetRate : double 
    + volatility : PnlVect* 
    + spot : PnlVect*
    + correlation : double 
    + model_size : int 
    + time_step : double t_step
    + void asset(PnlVect listTi , PnlMat* vectSimulation)
}


MonteCarlo o-- Option 
MonteCarlo o-- BlackScholesModel

'Option -- OptionType

@enduml 